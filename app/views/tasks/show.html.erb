<div class="container p-3">
  <h1>My tasks</h1>
  <p><%= @task.title %></p>
  <p><%= @task.details %></p>
  <% if @task.completed? == true %>
    <p><i class="fa-regular fa-square-check mx-1"></i>This task is completed</p>
  <% else %>
    <p><i class="fa-regular fa-square mx-1"></i>This task is not completed</p>
  <% end %>
</div>
